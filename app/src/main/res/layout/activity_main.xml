<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#11000000"
            android:padding="10dp"
            android:layout_marginBottom="5dp">

            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
                <TextView android:text="@string/hunger" android:layout_width="80dp" android:layout_height="wrap_content" android:textStyle="bold"/>
                <ProgressBar android:id="@+id/pbHunger" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:max="100" android:progress="100" android:progressTint="#FF5722"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginTop="4dp">
                <TextView android:text="@string/energy" android:layout_width="80dp" android:layout_height="wrap_content" android:textStyle="bold"/>
                <ProgressBar android:id="@+id/pbEnergy" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:max="100" android:progress="100" android:progressTint="#FFC107"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginTop="4dp">
                <TextView android:text="@string/happy" android:layout_width="80dp" android:layout_height="wrap_content" android:textStyle="bold"/>
                <ProgressBar android:id="@+id/pbHappiness" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:max="100" android:progress="100" android:progressTint="#E91E63"/>
            </LinearLayout>

            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:layout_marginTop="4dp">
                <TextView android:text="@string/clean_status" android:layout_width="80dp" android:layout_height="wrap_content" android:textStyle="bold"/>
                <ProgressBar android:id="@+id/pbCleanliness" style="?android:attr/progressBarStyleHorizontal" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:max="100" android:progress="100" android:progressTint="#2196F3"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivHusky"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/happy_dog"/>

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dots"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"/>

        <GridLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/btnFeed"
                android:text="@string/feed"
                android:layout_margin="6dp"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/btnSleep"
                android:text="@string/sleep"
                android:layout_margin="6dp"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/btnPlay"
                android:text="@string/play"
                android:layout_margin="6dp"
                android:layout_width="150dp"
                android:layout_height="60dp"/>

            <Button
                android:id="@+id/btnClean"
                android:text="@string/clean"
                android:layout_margin="6dp"
                android:layout_width="150dp"
                android:layout_height="60dp"/>
        </GridLayout>

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/game_over_restart"
            android:backgroundTint="#F44336"
            android:textSize="18sp"
            android:padding="20dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <com.example.myadsdk.BannerAdView
        android:id="@+id/bannerAdView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone" />

</LinearLayout>